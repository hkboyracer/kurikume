<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".authentication.LoginActivity"
    >

    <include
        android:id="@+id/toolbar_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/layout_header"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar_header"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ありがとうございました"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorSiftGreyDark"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/btn_go_to_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="お問い合わせいただいたメッセージは無事、送信されました。返信まで2〜3営業日ほどお時間をいただくことがあります。恐れ入りますが、ご了承いただきますよう、何卒お願いいたします。"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorSiftMediumGrey"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            />

        <TextView
            android:id="@+id/tv_contact_sent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ホームに戻る"
            android:padding="10dp"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_corner_contactus_confirmation"
            />

    </LinearLayout>

</RelativeLayout>