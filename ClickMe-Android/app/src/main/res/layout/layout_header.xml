<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    >

    <RelativeLayout
        android:id="@+id/main_header"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        >

        <ImageView
            android:id="@+id/iv_main_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/app_logo"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"

            />

        <TextView
            android:id="@+id/tv_actionbar_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:textSize="16sp"
            android:text="ClickMe"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:layout_toRightOf="@id/iv_main_logo"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_search_toolbar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_search"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@id/iv_hamburger_toolbar"
            />

s
        <ImageView
            android:id="@+id/iv_hamburger_toolbar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_menu"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorSiftGreyDark"
        android:layout_below="@id/main_header"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        />

</RelativeLayout>