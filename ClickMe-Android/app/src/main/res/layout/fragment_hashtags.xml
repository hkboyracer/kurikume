<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="?attr/actionBarSize"
    tools:context=".ui.search.SearchFragment"
    >

    <RelativeLayout
        android:id="@+id/rl_recyclerview_hashtags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_hashtags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_popular_user"/>

        <Button
            android:id="@+id/btn_go_to_main"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="完了"
            android:layout_margin="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/rv_hashtags"
            android:textColor="@color/white"
            android:background="@drawable/rounded_corner_btn_login"/>

    </RelativeLayout>

</RelativeLayout>