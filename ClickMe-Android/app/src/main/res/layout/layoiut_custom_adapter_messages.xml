<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".authentication.LoginActivity">

    <RelativeLayout
        android:id="@+id/r4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        >

        <RelativeLayout
            android:id="@+id/rl_user_with_image"
            android:layout_width="60dp"
            android:layout_height="60dp">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_user"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/rl_user_with_image"
            android:layout_marginTop="7dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="7dp"
            android:layout_marginRight="7dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:maxLines="1"
                android:text=" @Kurikumetest"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tv_user_name"/>

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:maxLines="1"
                android:maxLength="100"
                android:textColor="@color/black"
                android:text="@string/app_name"/>

            <TextView
                android:id="@+id/tv_user_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:maxLength="100"
                android:text="Latest text message will be appeared here...  "
                android:layout_below="@id/tv_user_name"/>

            <TextView
                android:id="@+id/tv_uploaded_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:maxLines="1"
                android:layout_centerVertical="true"
                android:text="1日前"
                android:layout_alignParentRight="true"/>


        </RelativeLayout>


    </RelativeLayout>

    <View
        android:id="@+id/v1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorSiftGreyDark"
        android:layout_below="@id/r4"
        />

</RelativeLayout>